extends ../layout

block content
    .container
        .row
            form.form-hroziontal(method="post" action="/admin/movie")
                .form-group
                    label.col-sm-2.control-label(for="inputTitle") 电影名字
                    .col-sm-10
                        input#inputTitle.form-control(type="text", name="movie[title]", vlaue="#{movie.title}")
                .form-group
                    label.col-sm-2.control-label(for="inputDoctor") 电影导演
                    .col-sm-10
                        input#inputDoctor.form-control(type="text", name="movie[doctor]", vlaue="#{movie.doctor}")
                .form-group
                    label.col-sm-2.control-label(for="inputCountry") 国家
                    .col-sm-10
                        input#inputCountry.form-control(type="text", name="movie[country]", vlaue="#{movie.country}")
                .form-group
                    label.col-sm-2.control-label(for="inputLanguage") 语种
                    .col-sm-10
                        input#inputLanguage.form-control(type="text", name="movie[language]", vlaue="#{movie.language}")
                .form-group
                    label.col-sm-2.control-label(for="inputPoster") 海报地址
                    .col-sm-10
                        input#inputPoster.form-control(type="text", name="movie[poster]", vlaue="#{movie.poster}")
                .form-group
                    label.col-sm-2.control-label(for="inputFlash") 片源地址
                    .col-sm-10
                        input#inputFlash.form-control(type="text", name="movie[flash]", vlaue="#{movie.flash}")
                .form-group
                    label.col-sm-2.control-label(for="inputYear") 上映年代
                    .col-sm-10
                        input#inputYear.form-control(type="text", name="movie[year]", vlaue="#{movie.year}")
                .form-group
                    label.col-sm-2.control-label(for="inputSummary") 电影简介
                    .col-sm-10
                        input#inputSummary.form-control(type="text", name="movie[summary]", vlaue="#{movie.summary}")
                .form-group
                    .col-sm-offset-2.col-sm-10
                    button.btn.btn-default(type="submit") 录入